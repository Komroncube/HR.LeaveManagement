<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link" href="#" title="Manage">
                @User.Identity.Name
            </a>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="User" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link" title="Logout">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="User" asp-action="Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="User" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>